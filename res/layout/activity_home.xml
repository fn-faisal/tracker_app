<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id = "@+id/busapp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        />
    
	<TextView 
        android:id = "@+id/busapp_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="From"
        android:layout_marginTop="10dp"
        android:layout_below="@id/busapp_title"
        />
    
    <Spinner 
        android:id="@+id/busapp_from_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busapp_from"
        android:layout_marginLeft="50dp"
        android:width="100dp"
		android:spinnerMode="dropdown"
        android:layout_marginTop="5dp"
        />
    
    <TextView 
        android:id = "@+id/busapp_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:text="To"
        android:layout_marginTop="10dp"
        android:layout_below="@id/busapp_title"
        />
    
    <Spinner 
        android:id="@+id/busapp_to_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busapp_to"
        android:layout_toRightOf="@id/busapp_from_box"
        android:layout_marginLeft="50dp"
        android:width="100dp"
        android:spinnerMode="dropdown"
        android:layout_marginTop="5dp"
        />
    
    <TextView
        android:id="@+id/my_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:textAppearance="?android:attr/textAppearanceLarge" />

        />
    
    <Button 
        android:id="@+id/busapp_go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/my_log"
        android:layout_centerHorizontal="true"
        android:text="Go"
        />
    
    
</RelativeLayout>
